<h1>Hello there, <%= current_user.name %></h1>

<p>Here are your favorite Roasters and Beverages</p>

<% @roasters.each do |roaster| %>
    <a href="/roasters/<%= roaster.id %>/beverages/new"><button>Add Beverage</button></a>
    <h3><%= roaster.name %></h3><a href="/roasters/<%= roaster.id %>/beverages/new"></a>
    <h4><%= roaster.address %></h4><br>
    <ul>
    <% roaster.beverages.each do |beverage| %>
        <h4>   Name: <%= beverage.name %></h4>
        <li>   Ingredients: <%= beverage.ingredients %></li>
        <li>   Size: <%= beverage.size %></li><br>
    <% end %>
    </ul>
<% end %>


<a href="/logout"><button>Log Out</button></a>